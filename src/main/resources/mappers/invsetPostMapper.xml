<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 
 <mapper namespace="com.sns.invest.post.dao.PostDAO">
 	<insert id="insertInvestPost" parameterType="map">
 		INSERT INTO `invest_post`
 		(
 			`userId`
 			, `userNickName`
 			, `investStyle`
 			, `stockItemName`
 			, `investmentOpinion`
 			, `investmentProcess`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{userId}
 			, #{userNickName}
 			, #{investStyle}
 			, #{stockItemName}
 			, #{investmentOpinion}
 			, #{investmentProcess}
 			, #{content}
 			, #{imagePath}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	 <select id="selectInvestPostList" resultType="com.sns.invest.post.model.invest.InvestPost">
 		SELECT 
 			`id`
 			, `userId`
 			, `userNickName`
 			, `investStyle`
 			, `stockItemName`
 			, `investmentOpinion`
 			, `investmentProcess`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
		FROM 
			`invest_post`
		ORDER BY `id` DESC
 	</select>
 </mapper>